<Window x:Class="W26W5IntroToWpf.GridExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W26W5IntroToWpf"
        mc:Ignorable="d"
        Title="GridExample" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="Black" Margin="5" Background="LightYellow"/>
        <Label Content="1" Grid.Row="0" Grid.Column="0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="Black" Margin="5" Background="LightPink"/>
        <Label Content="2" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"  FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" BorderThickness="1" BorderBrush="Black" Margin="5" Background="MediumPurple"/>
        <Label Content="3" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2"  FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <Border Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" BorderThickness="1" BorderBrush="Black" Margin="5" Background="LightGreen"/>
        <Label Content="4" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2"  FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <Border Grid.Row="1" Grid.Column="3" BorderThickness="1" BorderBrush="Black" Margin="5" Background="Orange"/>
        <Label Content="5" Grid.Row="1" Grid.Column="3" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <Border Grid.Row="2" Grid.Column="3" BorderThickness="1" BorderBrush="Black" Margin="5" Background="Cyan"/>
        <Label Content="6" Grid.Row="2" Grid.Column="3" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
